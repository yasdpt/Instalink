<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:orientation="horizontal"
    android:padding="2pt">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ticket_back"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="Instagramosokbfbkbokokgodkvofkvdsokvdokvsdovkokvok"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat"
                    android:maxLines="1"
                    android:maxLength="22"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:gravity="end"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btnLinkEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/ic_edit" />

                <ImageButton
                    android:id="@+id/btnLinkDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_delete_little" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etUrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="https://www.google.com/search?q=title+meaning+in+persianie=utf-8oe=utf-8client=firefox-b-ab"
                android:textColor="#0000ee" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>